<div class="card-square">
    <div class="card">
        <div class="card-content">
            <div class="card-body">
                <div class="card-title">
                    <h5><a href="/strutture/<%- struttura.organizzazione + "/"+ struttura.id %>"><%- struttura.denominazione %></a></h5>
                </div>
                <div class="card-subtitle">
                    <p>id #<%- struttura.id %></p>
                </div>
            </div>
            <div class="card-body">
                <% if (struttura.liste.length > 0) { %>
                    <h6>Liste:</h6>
                    <ul>
                        <% struttura.liste.forEach((lista) => { %>
                            <li><a href="/liste/<%- lista.id %>"><%- lista.denominazione %></a></li>
                        <% }) %>
                    </ul>
                <% } %>
                <!-- else show nessuna struttura -->
                <% if (!strutture.liste || strutture.liste.length === 0) { %>
                    <h6>Nessuna Lista</h6>
                <% } %>
            </div>
        </div>
    </div>
</div>
